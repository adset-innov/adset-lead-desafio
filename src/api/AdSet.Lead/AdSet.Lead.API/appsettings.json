{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=AdSetLeadDb;User Id=sa;Password=Password@123;TrustServerCertificate=True;"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/adset-lead-prod-log.txt",
          "rollingInterval": "Day"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "OpenApiSettings": {
    "PublicEndpoints": [
      "/api/AdminAuth/login",
      "/api/AdminAuth/logout",
      "/api/AdminAuth/refresh",
      "/api/Health"
    ]
  },
  "AllowedHosts": "*"
}